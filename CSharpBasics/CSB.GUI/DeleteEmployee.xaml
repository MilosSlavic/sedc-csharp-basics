<Window x:Class="CSB.GUI.DeleteEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSB.GUI"
        mc:Ignorable="d"
        Title="Delete employee" Height="250" Width="330">
    <Grid Background="#555555">
        <Button x:Name="CancelButton" Background="#995555" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,10,27" Foreground="White" FontSize="16" Width="139" Click="Cancel_Click"/>
        <Button x:Name="DeleteButton" Background="#559955" Content="Delete" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,0,10,27" Foreground="White" FontSize="16" Width="139" Click="Delete_Click"/>
        <Label x:Name="TextLabel" Content="Enter ID to delete an employee&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="IDinput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="134" Height="28" FontSize="16" FontStretch="UltraExpanded" TextAlignment="Center" PreviewTextInput="IDinput_TextChanged" />

    </Grid>
</Window>
